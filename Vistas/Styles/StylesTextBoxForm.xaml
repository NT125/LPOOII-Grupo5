        <Setter Property="Control.Width" Value="150" />
        <Setter Property="Control.FontFamily" Value="Century Gothic" />
        <Setter Property="Control.Foreground" Value="White" />
        <Setter Property="Control.BorderBrush" Value="#ffd46f" />
