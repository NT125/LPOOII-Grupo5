        <TextBox Height="54" HorizontalAlignment="Left" Margin="25,182,0,0" Name="txtDescripcion" VerticalAlignment="Top" Width="324" />
        <TextBox Height="23" HorizontalAlignment="Right" Margin="0,82,224,0" Name="txtPrecio" VerticalAlignment="Top" Width="82" />
