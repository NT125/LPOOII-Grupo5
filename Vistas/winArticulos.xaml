        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modulo de Artículos" Height="315" Width="402" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Familia:" Height="28" HorizontalAlignment="Left" Margin="25,12,0,0" Name="label2" VerticalAlignment="Top" />
        <Label Content="Unidad de Medida:" Height="28" HorizontalAlignment="Left" Margin="25,46,0,0" Name="label3" VerticalAlignment="Top" />
        <Label Content="Precio:" Height="28" HorizontalAlignment="Left" Margin="25,80,0,0" Name="label4" VerticalAlignment="Top" />
        <Label Content="Stock:" Height="28" HorizontalAlignment="Left" Margin="25,114,0,0" Name="label5" VerticalAlignment="Top" />
